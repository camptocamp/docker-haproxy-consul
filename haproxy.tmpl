global
        chroot /var/lib/haproxy
        user haproxy
        group haproxy
        
        # Default SSL material locations
        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private

        # Default ciphers to use on SSL-enabled listening sockets.
        # For more information, see ciphers(1SSL). This list is from:
        #  https://hynek.me/articles/hardening-your-web-servers-ssl-ciphers/
        ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!MD5:!DSS
        ssl-default-bind-options no-sslv3

defaults
        mode http
        timeout connect 5000
        timeout client 50000
        timeout server 50000

listen stats 
        bind *:8080
        stats enable
        stats uri /

frontend www
        bind *:80

# generated by consul-template
{{ range services }}
  {{ $server_name := .Name | replaceAll "_" "." }}
  {{ range .Tags }}
    {{ if . | regexMatch "server_name=" }}
      # found matching server_name in {{ . }}
      {{ $server_name := . | regexReplaceAll ".*=" "" }}
      # server_name in loop = {{ $server_name }}
    {{ end }}
  {{ end }}
  # server_name = {{ $server_name }}
        acl host_{{ .Name }} hdr(host) -i {{ $server_name }}{{ if env "HAPROXY_DOMAIN" }}.{{ env "HAPROXY_DOMAIN" }}{{ end }}
  {{ $service := . }}
  {{ range .Tags }}
    {{ if . | regexMatch "server_aliases=" }}
        acl host_{{ $service.Name }} hdr(host) -i {{ . | regexReplaceAll ".*=" "" | split ":" | join " " }}
    {{ end }}
  {{ end }}

        use_backend {{ .Name }}_backend if host_{{ .Name }}
{{ end }}

{{ range services }}
backend {{ .Name }}_backend
  {{ if .Tags | contains "sticky_session" }}
      # sticky
  {{ end }}
  {{ range .Tags }}
    {{ if . | regexMatch "public_ipaddress=" }}
      # public_ipaddress = {{ . | regexReplaceAll ".*=" "" }}
    {{ end }}
    {{ if . | regexMatch "server_aliases=" }}
      # server_aliases = {{ . | regexReplaceAll ".*=" "" | split ":" | join " " }}
    {{ end }}
  {{ end }}
  {{ range service .Name }}
        server {{ .ID }} {{ .Address }}:{{ .Port }}
  {{ end }}
{{ end }}
